---
import BaseLayout from '../layouts/BaseLayout.astro';
import SearchIsland from '../components/SearchIsland';
import StatsIsland from '../components/StatsIsland';
import logo from '../assets/logo.svg';

const site = Astro.site?.href ?? Astro.url?.origin ?? 'https://lirikrohani.com';
const siteBase = site.replace(/\/$/, '');
const websiteLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Lirik Rohani',
  url: siteBase,
  potentialAction: {
    '@type': 'SearchAction',
    target: `${siteBase}/?q={search_term_string}`,
    'query-input': 'required name=search_term_string',
  },
};
const websiteLdJson = JSON.stringify(websiteLd);
void websiteLdJson;
---
<BaseLayout title="Lirik Lagu Rohani" description="Cari lirik lagu rohani Indonesia dengan FTS5 super cepat di Cloudflare.">
  <script type="application/ld+json" is:inline>
    {websiteLdJson}
  </script>
  <section class="space-y-10">
    <div class="relative overflow-hidden rounded-3xl border border-white/10 bg-white/5 px-6 py-10 shadow-2xl sm:px-10 sm:py-12">
      <div class="pointer-events-none absolute -left-32 top-[-120px] h-96 w-96 rounded-full bg-cyan-400/10 blur-3xl" aria-hidden="true" />
      <div class="pointer-events-none absolute -right-24 bottom-[-180px] h-[520px] w-[520px] rounded-full bg-sky-500/10 blur-3xl" aria-hidden="true" />
      <div class="grid items-center gap-10 lg:grid-cols-[1.05fr,0.95fr]">
        <div class="space-y-6">
          <div class="flex items-center gap-3 text-cyan-100">
            <img src={logo.src} alt="Lirik Rohani" width={logo.width} height={logo.height} class="h-9 w-9 rounded-xl border border-white/10 bg-white/5 p-1" loading="lazy" decoding="async" />
            <p class="inline-flex items-center gap-2 rounded-full border border-cyan-200/20 bg-cyan-400/10 px-3 py-1 text-[11px] uppercase tracking-[0.24em] text-cyan-100 shadow-sm">Lagu untuk jemaat</p>
          </div>
          <div class="space-y-4">
            <h1 class="text-4xl font-semibold leading-tight text-white sm:text-5xl">
              Cari lirik lagu rohani Indonesia.
            </h1>
            <p class="max-w-3xl text-base text-slate-200 sm:text-lg">
              Untuk WL, singer, pemain musik, dan jemaat. Ketik judul atau potongan lirik, hasil muncul seketikaâ€”siap diproyeksikan atau dibaca di ponsel.
            </p>
          </div>
        </div>

        <div class="relative">
          <div class="aspect-[4/3] overflow-hidden rounded-2xl border border-white/10 bg-slate-900/60 shadow-2xl backdrop-blur">
            <picture>
              <source srcset="/hero-bible.webp" type="image/webp" />
              <img
                src="/hero-bible.webp"
                alt="Alkitab terbuka untuk persiapan ibadah"
                width="900"
                height="600"
                loading="eager"
                fetchpriority="high"
                decoding="async"
                class="h-full w-full object-cover"
              />
            </picture>
            <div class="absolute inset-0 bg-gradient-to-t from-slate-950/70 via-slate-950/10 to-transparent" aria-hidden="true"></div>
          </div>
          <div class="absolute -left-6 -bottom-6 hidden min-w-[220px] rounded-2xl border border-white/10 bg-slate-950/85 px-4 py-3 text-sm text-slate-100 shadow-xl backdrop-blur sm:block">
            <p class="text-xs uppercase tracking-[0.18em] text-cyan-200">Siap untuk ibadah</p>
            <p class="mt-1 text-lg font-semibold">Cari, tampilkan, nyanyikan</p>
            <p class="text-xs text-slate-400">Optimasi proyektor & layar ponsel. Lirik rapi, mudah dibaca.</p>
          </div>
        </div>
      </div>
    </div>

    <StatsIsland client:load />

    <div id="search">
      <SearchIsland client:load />
    </div>
  </section>
</BaseLayout>
