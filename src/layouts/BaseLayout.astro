---
import '../styles/tailwind.css';
import { ViewTransitions } from 'astro:transitions';

const {
  title = 'Lirik Rohani',
  description = 'Cari lirik lagu rohani Indonesia dengan cepat',
  noindex = false,
  ogImage = '/og-default.png',
  themeColor = '#0b1224',
} = Astro.props;

const site = Astro.site?.href ?? Astro.url?.origin ?? '';
const canonical = Astro.url?.href ?? (site ? new URL(Astro.request?.url ?? '/', site).href : '');
const robots = noindex ? 'noindex, nofollow' : 'index, follow';
const absoluteOg = ogImage.startsWith('http') || ogImage.startsWith('//') ? ogImage : `${site?.replace(/\/$/, '')}${ogImage}`;
---
<!DOCTYPE html>
<html lang="id" class="min-h-full bg-slate-950 text-slate-50">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    <meta name="theme-color" content={themeColor} />
    {canonical && <link rel="canonical" href={canonical} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {canonical && <meta property="og:url" content={canonical} />}
    {absoluteOg && <meta property="og:image" content={absoluteOg} />}
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    {absoluteOg && <meta property="twitter:image" content={absoluteOg} />}
    <ViewTransitions />
  </head>
  <body class="relative min-h-screen font-sans antialiased">
    <div
      class="pointer-events-none absolute inset-0 -z-20 opacity-90"
      style="background-image:radial-gradient(circle at 18% 20%,rgba(45,212,191,0.18),transparent 32%),radial-gradient(circle at 84% 18%,rgba(59,130,246,0.16),transparent 32%),radial-gradient(circle at 70% 78%,rgba(14,165,233,0.14),transparent 36%);"
      aria-hidden="true"
    ></div>
    <div
      class="pointer-events-none absolute inset-0 -z-30 bg-[url('/hero-mesh.svg')] bg-cover bg-fixed opacity-50"
      aria-hidden="true"
    ></div>
    <a href="#search" class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-lg focus:bg-white focus:px-4 focus:py-2 focus:text-slate-900">Loncat ke pencarian</a>
    <main role="main" class="relative mx-auto flex min-h-screen max-w-4xl flex-col px-4 pb-16 pt-12 sm:px-8">
      <slot />
    </main>
  </body>
</html>
